# Database Configuration
DB_HOST=localhost
DB_NAME=library_db
DB_USER=root
DB_PASS=

# Site Configuration
SITE_URL=http://localhost/library
SITE_NAME=سیستم مدیریت کتابخانه هوشمند
SITE_LANG=fa
ADMIN_EMAIL=admin@library.local

# Security Settings
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRE=3600
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=900

# API Configuration
GOOGLE_BOOKS_API_KEY=your_api_key_here
OPEN_LIBRARY_API_ENABLE=true
API_TIMEOUT=10
API_CACHE_DURATION=86400

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=uploads/books/
COVER_WIDTH=400
COVER_HEIGHT=600

# Cache Settings
CACHE_ENABLE=true
CACHE_PATH=cache/
CACHE_DURATION=3600

# Email Settings (برای آینده)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ENCRYPTION=tls

# Logging
DEBUG_MODE=false
ERROR_LOGGING=true
LOG_PATH=logs/
LOG_LEVEL=ERROR

# Pagination
ITEMS_PER_PAGE=20
BOOKS_PER_PAGE=12

# Reservation Settings
DEFAULT_BORROW_DAYS=15
MAX_BORROW_DAYS=30
MAX_ACTIVE_RESERVATIONS=3
LATE_FEE_PER_DAY=5000
